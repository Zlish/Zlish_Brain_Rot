{
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "/path/to/claude-brainrot/open-brainrot.sh > /dev/null 2>&1 &"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "osascript -e 'tell application \"Google Chrome\" to close every window' > /dev/null 2>&1"
          }
        ]
      }
    ]
  },
  "alwaysThinkingEnabled": true
}
