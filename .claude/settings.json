{
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/stevesteve/claude-brainrot/open-brainrot.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "osascript -e 'tell application \"Google Chrome\" to close every window'"
          }
        ]
      }
    ]
  },
  "alwaysThinkingEnabled": true
}
